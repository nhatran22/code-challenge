// Using For
function sum_to_n(n) {
  let sum = 0;
  for (let i = 1; i <= n; i++) {
    sum += i;
  }
  return sum;
}

// Using Sum Formula
function sum_to_n(n) {
  return (n * (n + 1)) / 2;
}

// Using Recursion
function sum_to_n(n) {
  if (n <= 0) return 0;  // base case
  return n + sum_to_n(n - 1);
}
